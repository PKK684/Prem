import streamlit as st
import pandas as pd
import numpy as np

# Title and header
st.title("ðŸš€ My First Streamlit App")
st.header("Hello! Welcome to Streamlit")

# Input text
name = st.text_input("Enter your name:", "Guest")
st.write(f"Hello, {name}! ðŸ‘‹")

# Slider
age = st.slider("Select your age:", 1, 100, 18)
st.write(f"Your age is: {age}")

# Checkbox
if st.checkbox("Show random data table"):
    df = pd.DataFrame(
        np.random.randn(10, 3),
        columns=['A', 'B', 'C']
    )
    st.write(df)

# Button
if st.button("Click Me!"):
    st.success("You clicked the button ðŸŽ‰")

# Select box
option = st.selectbox("Pick a fruit:", ["Apple", "Banana", "Cherry"])
st.write("You selected:", option)
